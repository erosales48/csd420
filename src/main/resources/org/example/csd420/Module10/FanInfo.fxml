<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox prefHeight="450.0" prefWidth="500.0" spacing="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="org.example.csd420.Module10.FanInfoController">
    <VBox alignment="TOP_CENTER" prefHeight="435.0" prefWidth="178.0" spacing="5.0">
        <Label text="ID" />
        <TextField fx:id="idField" promptText="ID" />
        <Label text="First Name" />
        <TextField fx:id="firstNameField" promptText="First Name" />
        <Label text="Last Name" />
        <TextField fx:id="lastNameField" promptText="Last Name" />
        <Label text="Team" />
        <TextField fx:id="favoriteTeamField" promptText="Favorite Team" />
        <Label fx:id="messageLabel" prefHeight="120"/>
        <Button onAction="#displayRecord" text="Display Record" />
        <Button onAction="#updateRecord" text="Update Record" />
      <HBox.margin>
         <Insets bottom="30.0" left="10.0" top="30.0" />
      </HBox.margin>
      <padding>
         <Insets right="10.0" />
      </padding>
    </VBox>
    <ImageView fx:id="imageView" fitHeight="300" fitWidth="300">
      <HBox.margin>
         <Insets left="20.0" right="20.0" top="20.0" />
      </HBox.margin></ImageView>
</HBox>
